{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "esModuleInterop": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "baseUrl": "./",
        "outDir": "./dist"
    },
    "include": ["./src/*.ts", "./src/**/*.ts"]
}
