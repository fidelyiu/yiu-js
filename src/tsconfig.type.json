{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "../dist/@types"
    },
    "include": ["./*.ts", "./**/*.ts"],
    "exclude": ["dist"]
}
